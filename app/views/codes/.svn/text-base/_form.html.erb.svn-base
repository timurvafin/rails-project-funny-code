<% form_remote_for(code) do |f| %>
    <p>
        <b><%=l 'code.code' %>:</b><br />
        <%= f.text_area :code, :style => 'width:100%' %>
    </p>
    <p>
        <b><%=l 'code.source' %>:</b><br />
        <%= f.text_field :source %>
    </p>
    <p>
        <%= f.submit l('code.submit') %>
    </p>
<% end %>